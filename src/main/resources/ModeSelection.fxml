<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.ModeSelectionController">
    <Label text="Select Game Mode" style="-fx-font-size: 18px;" />
    <Button text="Easy" onAction="#startEasyMode" />
    <Button text="Medium" onAction="#startMediumMode" />
    <Button text="Hard" onAction="#startHardMode" />
</VBox>
